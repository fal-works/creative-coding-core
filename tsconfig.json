{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./types",
        "moduleResolution": "node",
        "target": "es2015",
        "module": "es2015",
        "sourceMap": false,
        "preserveConstEnums": false,
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}
